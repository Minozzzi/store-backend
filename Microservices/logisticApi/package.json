{
  "name": "tabacconist-beckend",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "prestart:prod": "rimraf dist && npm run build",
    "start:prod": "pm2 start --node-args=\"--require ./tsconfig-paths-bootstrap.js\" dist/src/main.js",
    "eslint": "eslint --fix 'src/**/*.ts'",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch -c jest-unit-config.js",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "build-container": "docker-compose up --build --no-cache",
    "dev": "docker-compose up",
    "sonar": "node sonar-project.js"
  },
  "dependencies": {
    "@nestjs/common": "^8.0.0",
    "@nestjs/core": "^8.0.0",
    "@nestjs/microservices": "^8.4.5",
    "@nestjs/mongoose": "^9.1.0",
    "@nestjs/platform-express": "^8.0.0",
    "@nestjs/swagger": "^5.1.5",
    "axios": "^0.24.0",
    "class-validator": "^0.13.2",
    "config": "^3.3.6",
    "dotenv": "^10.0.0",
    "kafkajs": "^2.0.0",
    "mongoose": "^6.3.5",
    "nh-utils": "^0.1.5",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "swagger-ui-express": "^4.2.0",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.0.0",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^8.0.0",
    "@types/axios": "^0.14.0",
    "@types/config": "^0.0.40",
    "@types/express": "^4.17.13",
    "@types/jest": "27.0.2",
    "@types/node": "^17.0.7",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.7.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import-helpers": "^1.2.0",
    "eslint-plugin-prettier": "^4.0.0",
    "faker": "^5.5.3",
    "jest": "^27.2.5",
    "jest-sonar-reporter": "^2.0.0",
    "pm2": "^5.1.2",
    "prettier": "^2.5.1",
    "pretty-quick": "^3.1.2",
    "properties-reader": "^2.2.0",
    "sonarqube-scanner": "^2.8.1",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5"
  },
  "jestSonar": {
    "reportPath": "coverage",
    "reportFile": "test-reporter.xml",
    "indent": 4
  }
}
